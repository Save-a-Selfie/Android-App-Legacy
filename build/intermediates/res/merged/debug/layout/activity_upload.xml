<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    tools:context="com.android.karl.saveaselfie.UploadActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"> </include>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <!-- Image that the user wants to upload -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/image_height"
                android:id="@+id/image_choosen_by_user"
                android:layout_marginTop="@dimen/image_margin_top"
                />

            <!-- TYPE OF DEVICE THAT THE USER IS UPLOADING -->
            <!-- four buttons for the different devices, on click listeners to change from active and deactive -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:id="@+id/device_selection_linear_layout">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
                </View>

                <Button
                    android:layout_width="@dimen/button_height_and_width"
                    android:layout_height="wrap_content"
                    android:id="@+id/device_button_01"
                    android:background="@drawable/unselected_defibrillator"
                    android:layout_marginTop="@dimen/button_margin_top"
                    android:layout_weight="1"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
                </View>

                <Button
                    android:layout_width="@dimen/button_height_and_width"
                    android:layout_height="wrap_content"
                    android:id="@+id/device_button_02"
                    android:background="@drawable/unselected_life_ring"
                    android:layout_marginTop="@dimen/button_margin_top"
                    android:layout_weight="1"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
                </View>

                <Button
                    android:layout_width="@dimen/button_height_and_width"
                    android:layout_height="wrap_content"
                    android:id="@+id/device_button_03"
                    android:background="@drawable/unselected_first_aid_kit"
                    android:layout_marginTop="@dimen/button_margin_top"
                    android:layout_weight="1"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
                </View>

                <Button
                    android:layout_width="@dimen/button_height_and_width"
                    android:layout_height="wrap_content"
                    android:id="@+id/device_button_04"
                    android:background="@drawable/unselected_defibrillator"
                    android:layout_marginTop="@dimen/button_margin_top"
                    android:layout_weight="1"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">
                </View>

            </LinearLayout>

            <!-- Comment the user is going to make -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android.support.design:hintTextAppearance="@style/TextAppearance.AppCompat">
                <EditText
                    android:maxLines="10"
                    android:maxLength="300"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:fontFamily="sans-serif"
                    android:id="@+id/enter_text"
                    android:hint="@string/enter_your_comment"
                    android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
                    />
            </android.support.design.widget.TextInputLayout>

            <!-- Pinpoint location -->

            <!-- Button for the posting the photo online -->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_image"
                android:background="@color/green_post_button"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="40sp"
                android:fontFamily="sans serif"
                android:gravity="center|bottom"
                android:id="@+id/upload_button"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
